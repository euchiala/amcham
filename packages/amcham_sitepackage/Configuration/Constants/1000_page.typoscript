styles {
    templates {
        layoutRootPath = EXT:amcham_sitepackage/Resources/Private/Layouts/ContentElements/
        partialRootPath = EXT:amcham_sitepackage/Resources/Private/Partials/ContentElements/
        templateRootPath = EXT:amcham_sitepackage/Resources/Private/Templates/ContentElements/
    }
}